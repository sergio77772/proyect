<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    >

    <Button
        android:id="@+id/buttonGaleria"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Seleccionar de Galeria"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnCapturePicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Tomar Foto con Candidato" 
        android:background="#FF6565"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCapturePicture"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:textColor="#FF1A1A"
        android:text="Bienvenido al Concurso!! tomate una foto con alguno de nuestros candidatos y estaras participando!"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/consurso2_1" />

    </LinearLayout>

</RelativeLayout>