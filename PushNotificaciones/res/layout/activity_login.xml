<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dip" >

    <!-- Logo -->

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:layout_weight="4"
        android:gravity="center"
        android:src="@drawable/ucr2" />

    <!-- Email Label -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:text="Usuario"
        android:textColor="#372c24" />

    <EditText
        android:id="@+id/edusuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/edittext_rounded_corners"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <!-- Password Label -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#372c24" />

    <EditText
        android:id="@+id/edpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/edittext_rounded_corners"
        android:password="true"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <!-- Login button -->

    <Button
        android:id="@+id/Blogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Login" />

    <Switch
        android:id="@+id/switchRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recordarme"
        android:checked="true"
        android:textOn="SI"
        android:textOff="NO"
        android:textColorHint="#000000" />

    <!-- Link to forgot passw -->

   <Button
        android:id="@+id/Bmain"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dip"
        android:onClick="Bmain"
        android:text="@string/msgbtnslogin" 
        android:visibility="invisible"/>

    <!-- Link to Registration Screen -->

  

    <TextView
        android:id="@+id/txBienvenida"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1fa67a"
        android:gravity="center"
        android:text="DESARROLLO FEROZO SOLUCIONES INFORMATICAS -UCR REDES SOCIALES (c) 2017"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>