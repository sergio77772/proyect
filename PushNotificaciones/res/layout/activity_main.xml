<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_weight="4"
        android:gravity="center"
        android:src="@drawable/consurso_3" />
  
    <Button
        android:id="@+id/buttonRadio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F78181"
        android:drawableLeft="@drawable/ic_afiliate"
        android:drawableRight="@drawable/ic_ir"
        android:ellipsize="none"
        android:text="Afiliate a la ucr"
        android:textSize="17dp" 
        android:visibility="invisible"/>

    

    <!--<Button
        android:id="@+id/buttonweb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_recorrido"
        android:drawableRight="@drawable/ic_ir"
        android:text="Recorridos, caravanas y caminatas"
        android:textSize="17dp" 
        android:visibility="visible"/>-->

    <Button
        android:id="@+id/buttonEvento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawableRight="@drawable/ic_ir"
        android:text="Agregar Evento" 
        android:visibility="invisible"/>

    <Button
        android:id="@+id/buttonCalendario"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawableRight="@drawable/ic_ir"
        android:text="calendario de Actividades" 
        android:visibility="invisible"/>
    
    <Button
        android:id="@+id/buttonplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_calendar2"
        android:drawableRight="@drawable/ic_ir"
        android:onClick="btnMap"
        android:text="Punto Esquinas" 
        android:visibility="invisible"
        />
       
    <Button
        android:id="@+id/buttonNoticias"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_play"
        android:drawableRight="@drawable/ic_ir"
        android:text="Noticias y Actualidad" />

    
    <Button
        android:id="@+id/buttonCamara"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_cam"
        android:drawableRight="@drawable/ic_ir"
        android:text="Concurso Mi Esquina en Fotos" 
        android:textSize="17dp" 
        />
    
    <Button
        android:id="@+id/buttonVotoFoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_play"
        android:drawableRight="@drawable/ic_ir"
        android:text="Vota tu imagen Favorita" 
        android:textSize="18dp" 
        />
    
    <Button
        android:id="@+id/buttonweb"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_recorrido"
        android:drawableRight="@drawable/ic_ir"
        android:text="Recorridos, caravanas y caminatas"
        android:textSize="17dp" 
        android:visibility="visible"/>
    
    <Button
        android:id="@+id/buttonPadron"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_urna"
        android:drawableRight="@drawable/ic_ir"
        android:text="Donde Voto" 
        android:textSize="18dp" 
        />
    
    <Button
        android:id="@+id/buttonContacto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#00addb"
        android:drawableLeft="@drawable/ic_sugerencias"
        android:drawableRight="@drawable/ic_ir"
        android:text="Contacta con Nosotros" />

    <TextView
        android:id="@+id/txBienvenida"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#1fa67a"
        android:gravity="center"
        android:text="DESARROLLO FEROZO SOLUCIONES INFORMATICAS(c) 2017"
        android:textColor="#FFFFFF"
        android:textSize="11dp"
        android:textStyle="bold" />

</LinearLayout>